{
  "name": "pong",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "vite --port 10000 --host",
    "format": "bunx @biomejs/biome format --write src",
    "lint": "bunx @biomejs/biome lint src",
    "check": "bunx @biomejs/biome check --apply src"
  },
  "dependencies": {
    "@headlessui/react": "^2.0.4",
    "@hookform/resolvers": "^3.7.0",
    "@tanstack/react-query": "^5.32.1",
    "@tanstack/react-router": "^1.31.6",
    "@tanstack/router-devtools": "^1.31.6",
    "@tanstack/router-vite-plugin": "^1.30.0",
    "@uidotdev/usehooks": "^2.4.1",
    "bootstrap": "^5.3.3",
    "clsx": "^2.1.1",
    "cva": "npm:class-variance-authority",
    "dayjs": "^1.11.13",
    "react": "^18.2.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.52.1",
    "react-qr-code": "^2.0.15",
    "tailwind-merge": "^2.3.0",
    "ua-parser-js": "^1.0.37",
    "vite-plugin-mkcert": "^1.17.6",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.2",
    "@types/node": "^20.12.8",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/ua-parser-js": "^0.7.39",
    "@vitejs/plugin-react": "^2.2.0",
    "autoprefixer": "^10.4.19",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^3.2.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "npx @biomejs/biome format src/**/*.{ts,tsx,mjs} --write",
      "npx @biomejs/biome lint src/**/*.{ts,tsx,mjs}"
    ]
  }
}
