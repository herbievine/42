  },
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "hono": "^4.6.1",
    "nanoid": "^5.0.7",
    "otplib": "^12.0.1",
    "pg": "^8.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.1.9",
    "@types/node": "^22.5.5",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.24.2",
    "typescript": "^5.6.2"
  }
}
